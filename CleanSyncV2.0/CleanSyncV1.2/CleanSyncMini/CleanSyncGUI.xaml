                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn CellTemplate="{StaticResource ConflictCell1}" Width="30">
                                    <Button Style="{StaticResource InformButton}" Width="20" Height="20" Name="PCSelectAll" Click="ConflictLeftSelectAll">
