                                <GridViewColumn CellTemplate="{StaticResource ConflictCell5}" Width="30">
                                    <Button Style="{StaticResource InformButton}" Name="USBSelectAll" Click="ConflictRightSelectAll">
                                        <Button.ToolTip>
                                            <ToolTip Content="Select All"></ToolTip>
                                        </Button.ToolTip> A</Button>
                                </GridViewColumn>
