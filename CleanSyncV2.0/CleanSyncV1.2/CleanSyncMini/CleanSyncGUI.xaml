                        </Button>
                        
                        <Button Style="{StaticResource InformButton}" Foreground="WhiteSmoke" Margin="400,30,0,0" VerticalAlignment="Top" Width="80" Height="30" Name="RemoveJob" HorizontalAlignment="Left" Click="RemoveJob_Click">
