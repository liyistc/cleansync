                    <ListView Foreground="WhiteSmoke" Name="ConflictList" ItemsSource="{Binding Conflicts}" Background="Transparent" Margin="0,5,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Transparent">
